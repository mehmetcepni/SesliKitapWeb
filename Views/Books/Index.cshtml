@model IEnumerable<Book>

@{
    ViewData["Title"] = "Kitaplar";
}

<h1>Kitaplar</h1>

@if (User?.IsInRole("Admin") == true)
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni Kitap Ekle</a>
    </p>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(item.CoverImageUrl))
                {
                    <img src="@item.CoverImageUrl" class="card-img-top" alt="@item.Title">
                }
                else
                {
                    <img src="~/images/default-book-cover.jpg" class="card-img-top" alt="@item.Title">
                }
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@item.Author</h6>
                    <p class="card-text">@(item.Description?.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="text-muted">
                                @if (item.Reviews != null && item.Reviews.Any())
                                {
                                    <text>@item.Reviews.Average(r => r.Rating).ToString("F1") / 5</text>
                                }
                                else
                                {
                                    <text>Henüz değerlendirilmedi</text>
                                }
                            </span>
                        </div>
                        <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary mt-auto">Detaylar</a>
                        @if (User?.IsInRole("Admin") == true)
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger mt-2">Sil</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div> 