@model IEnumerable<Book>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-4">Sesli Kitap Arşivi</h1>
            <p class="lead">Binlerce sesli kitap arasından dilediğini dinle, puanla ve yorumla!</p>
        </div>
        <div class="col-md-4 d-flex align-items-center justify-content-end">
            <form asp-controller="Books" asp-action="Index" method="get" class="w-100">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Kitap veya yazar ara..." value="@(Context.Request.Query["search"])" />
                    <button class="btn btn-primary" type="submit">Ara</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Öne Çıkanlar (Slider) -->
    <div id="featuredBooksCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Take(3).Count(); i++)
            {
                var book = Model.ElementAt(i);
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="row align-items-center">
                        <div class="col-md-4">
                            <img src="@book.CoverImageUrl" class="d-block w-100 rounded shadow" alt="@book.Title">
                        </div>
                        <div class="col-md-8">
                            <h2>@book.Title</h2>
                            <h5 class="text-muted">@book.Author</h5>
                            <p>@(book.Description?.Length > 200 ? book.Description.Substring(0, 200) + "..." : book.Description)</p>
                            <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary">Dinlemeye Başla</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#featuredBooksCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Önceki</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#featuredBooksCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Sonraki</span>
        </button>
    </div>

    <!-- Kitaplar Listesi -->
    <h3 class="mb-3">Tüm Kitaplar</h3>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@item.CoverImageUrl" class="card-img-top" alt="@item.Title">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Author</h6>
                        <div class="mb-2">
                            @if (item.Reviews != null && item.Reviews.Any())
                            {
                                <span class="text-warning">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= Math.Round(item.Reviews.Average(r => r.Rating)))
                                        {
                                            <span>★</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">☆</span>
                                        }
                                    }
                                </span>
                                <span class="ms-1">@item.Reviews.Average(r => r.Rating).ToString("F1")</span>
                            }
                            else
                            {
                                <span class="text-muted">Henüz değerlendirilmedi</span>
                            }
                        </div>
                        <p class="card-text flex-grow-1">@(item.Description?.Length > 60 ? item.Description.Substring(0, 60) + "..." : item.Description)</p>
                        <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary mt-auto">Detaylar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        var myCarousel = document.querySelector('#featuredBooksCarousel');
        if (myCarousel) {
            var carousel = new bootstrap.Carousel(myCarousel, {
                interval: 5000,
                wrap: true
            });
        }
    </script>
}
